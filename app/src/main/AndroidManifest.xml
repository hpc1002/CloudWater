<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.it.cloudwater">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".home.HomeActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/welcomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".user.CouponActivity" />
        <activity android:name=".user.InvitationActivity" />
        <activity android:name=".user.AddressActivity" />
        <activity android:name=".user.BucketActivity" />
        <activity android:name=".user.TicketActivity" />
        <activity android:name=".user.MoreActivity" />
        <activity android:name=".commodity.DetailActivity" />
        <activity android:name=".commodity.SubmitOrderActivity" />
        <activity android:name=".pay.PayActivity" />
        <activity android:name=".pay.PayDetailActivity" />
        <activity android:name=".user.more.FeedbackActivity" />
        <activity android:name=".user.more.TermsActivity" />
        <activity android:name=".user.more.AboutUsActivity" />
        <activity android:name=".user.MessageActivity" />
        <activity android:name=".user.RegisterActivity" />
        <activity android:name=".user.LoginActivity" />
        <activity android:name=".user.more.ChangePasswordActivity" />
        <activity android:name=".user.AddAddressActivity" />
        <activity android:name=".user.OrderActivity"></activity>
    </application>

</manifest>