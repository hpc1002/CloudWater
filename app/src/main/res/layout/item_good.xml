<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_good_item">

    <ImageView
        android:id="@+id/good_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/home_load_error" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/good_img" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/good_img"
        android:text="名称"
        android:textColor="@color/title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/good_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/good_name"
        android:text="1.8L"
        android:textColor="@color/title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/good_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

</RelativeLayout>