<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.it.cloudwater.user.TicketDetailActivity">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/bucket_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/home_load_error" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/bucket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桶装水名字" />

        <TextView
            android:id="@+id/bucket_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="原价26.00元/桶" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/eyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.jude.easyrecyclerview.EasyRecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_delete"
                android:padding="10dp"
                android:text="共130元" />

            <TextView
                android:id="@+id/to_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/frame_delete"
                android:padding="10dp"
                android:text="去结算" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
