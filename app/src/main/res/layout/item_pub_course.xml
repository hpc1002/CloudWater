<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/courseId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/courseImg"
        android:layout_width="@dimen/x350"
        android:layout_height="@dimen/y200"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/home_load_error" />


    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y25"
        android:ellipsize="end"
        android:maxEms="11"
        android:maxLines="1"
        android:text="课程题目"
        android:textColor="@color/course_name"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/course_learn_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginTop="@dimen/y22"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="1980"
            android:textColor="@color/course_learn_number"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginTop="@dimen/y22"
            android:gravity="center_vertical"
            android:text="人学习"
            android:textColor="@color/course_learn_number"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>
