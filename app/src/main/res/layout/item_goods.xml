<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/waterId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bucketImg"
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/y200"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_load_error" />


        <TextView
            android:id="@+id/bucket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y25"
            android:ellipsize="end"
            android:maxEms="11"
            android:maxLines="1"
            android:text="桶装水名称"
            android:textColor="@color/course_name"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bucket_specifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y22"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="规格:500ml*1瓶"
                android:textColor="@color/course_learn_number"
                android:textSize="12sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bucket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y40"
                android:layout_marginTop="@dimen/y22"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="￥49"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bucket_amount_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/y40"
                android:layout_marginTop="@dimen/y22"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:textColor="@color/course_learn_number"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/add_shop"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
